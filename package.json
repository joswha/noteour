{
  "name": "noteour",
  "displayName": "noteour",
  "description": "Collect and view the notes in your code.",
  "version": "0.0.2",
  "publisher": "joswha",
  "repository": {
    "type": "git",
    "url": "https://github.com/joswha/noteour"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:extension.collectNotes",
    "onCommand:extension.openAuditNotes"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.collectNotes",
        "title": "Noteour: Collect Audit Notes"
      }, 
      {
        "command": "extension.openAuditNotes",
        "title": "Noteour: Open Audit Notes"
      },
      {
        "command": "extension.clearNotes",
        "title": "Noteour: Clear Audit Notes"
      },
      {
        "command": "extension.setFileExtensions",
        "title": "Noteour: Set File Extensions to Scan"
      },
      {
        "command": "extension.setNoteTypes",
        "title": "Noteour: Set Note Types to Search"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "auditNotesExplorer",
          "title": "Audit Notes",
          "icon": "resources/audit-icon.svg"
        }
      ]
    },
    "views": {
      "auditNotesExplorer": [
        {
          "id": "auditNotesView",
          "name": "Audit Notes"
        }
      ]
    },
    "iconThemes": [
      {
        "id": "auditNotes",
        "label": "Audit Notes",
        "path": "./resources/icons.json"
      }
    ],
    "configuration": {
      "title": "Audit Notes",
      "properties": {
        "auditNotes.fileExtensions": {
          "type": "array",
          "default": ["js", "ts", "jsx", "tsx", "sol"],
          "description": "File extensions to scan for audit notes"
        },
        "auditNotes.noteTypes": {
          "type": "array",
          "default": ["TODO", "@audit"],
          "description": "Types of notes to search for (case insensitive)"
        }
      }
    },
    "css": [
      "./resources/auditNotes.css"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "files": [
    "out",
    "resources"
  ]
}
